<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.rashminidhi.wifihotspoteg.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ssid"
        android:hint="Enter SSID"
        android:textSize="26sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwd"
        android:hint="Enter PassWord"
        android:textSize="26sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Mobile Data"
        android:textSize="26sp"
        android:id="@+id/enableMobleData"/>

    <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/enableHotspot"
         android:text="Enable Hotspot"
         android:textSize="26sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/receiver"
        android:text="Receiver"
        android:textSize="26sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/disableHotspot"
        android:textSize="26sp"
        android:text="Disable Hotspot"/>
</LinearLayout>
